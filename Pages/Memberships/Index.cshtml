@page
@model GitHubPractice.Pages.Memberships.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-3">Index</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-primary me-2">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th class="text-primary">
                @Html.DisplayNameFor(model => model.Membership[0].Name)
            </th>
            <th class="text-primary">
                @Html.DisplayNameFor(model => model.Membership[0].JoinDate)
            </th>
            <th class="text-primary">
                @Html.DisplayNameFor(model => model.Membership[0].IsActive)
            </th>
            <th class="text-primary">
                @Html.DisplayNameFor(model => model.Membership[0].BirthDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Membership) {
        <tr>
            <td style="font-weight:500">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary me-2">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-primary me-2">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-primary me-2">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
